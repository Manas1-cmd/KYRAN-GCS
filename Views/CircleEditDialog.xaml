<Window x:Class="SimpleDroneGCS.Views.CircleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource CircleEdit_Title}" 
        Height="280" Width="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#060B1A"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="#3B82F6"
        BorderThickness="1">

    <Grid>
        <!-- Заголовок окна -->
        <Border Background="#0D1733" Height="35" VerticalAlignment="Top"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <TextBlock x:Name="TitleText" Text="{DynamicResource StartCircle}" 
                           Foreground="#FACC15" FontWeight="Bold" FontSize="14"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                <Button Content="✕" HorizontalAlignment="Right" 
                        Width="35" Height="35"
                        Background="Transparent" Foreground="#9CA3AF"
                        BorderThickness="0" Click="CancelButton_Click"
                        FontSize="14"/>
            </Grid>
        </Border>

        <Grid Margin="15,45,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Радиус -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="{DynamicResource CircleEdit_Radius}" 
                       Foreground="#D1D5DB" FontSize="12"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" 
                     x:Name="RadiusBox"
                     Background="#1E3A5F" 
                     Foreground="White"
                     BorderBrush="#3B82F6"
                     Padding="8,5" FontSize="13"
                     Margin="0,0,0,10"/>

            <!-- Высота -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="{DynamicResource CircleEdit_Altitude}" 
                       Foreground="#D1D5DB" FontSize="12"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     x:Name="AltitudeBox"
                     Background="#1E3A5F" 
                     Foreground="White"
                     BorderBrush="#3B82F6"
                     Padding="8,5" FontSize="13"
                     Margin="0,0,0,10"/>

            <!-- Направление -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="{DynamicResource CircleEdit_Direction}" 
                       Foreground="#D1D5DB" FontSize="12"
                       VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1"
                      x:Name="DirectionCombo"
                      Background="#1E3A5F" Foreground="White"
                      Padding="8,5" FontSize="13"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="{DynamicResource CircleEdit_CW}" Tag="CW"/>
                <ComboBoxItem Content="{DynamicResource CircleEdit_CCW}" Tag="CCW"/>
            </ComboBox>

            <!-- AutoNext -->
            <CheckBox Grid.Row="3" Grid.ColumnSpan="2"
                      x:Name="AutoNextCheck"
                      Margin="0,5,0,0">
                <TextBlock Foreground="#D1D5DB" FontSize="12">
                    <Run Text="{DynamicResource CircleEdit_AutoContinue}"/>
                    <Run Text="{DynamicResource CircleEdit_NoWait}" Foreground="#6B7280"/>
                </TextBlock>
            </CheckBox>

            <!-- Кнопки -->
            <StackPanel Grid.Row="5" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">
                <Button Content="{DynamicResource Save}" Width="90" Height="32"
                        Click="OkButton_Click"
                        Background="#22C55E" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold"
                        Margin="0,0,10,0"/>
                <Button Content="{DynamicResource Cancel}" Width="80" Height="32"
                        Click="CancelButton_Click"
                        Background="#374151" Foreground="#D1D5DB"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

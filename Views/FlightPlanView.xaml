                <!-- Ð’Ñ‹Ð±Ð¾Ñ€ ÐºÐ°Ñ€Ñ‚Ñ‹ (Ð»ÐµÐ²Ñ‹Ð¹ Ð½Ð¸Ð·) -->
                <StackPanel Orientation="Horizontal"

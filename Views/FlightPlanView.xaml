                                    </Grid>
                                </Border>
                                <Border Grid.Row="3" Grid.ColumnSpan="2" Style="{StaticResource TelemetryBoxStyle}" Margin="12,4,12,4" Height="32" Padding="8,4">
                                    <Grid Margin="0,-2,0,-2">
                                        <TextBlock Text="{DynamicResource Multirotor}" Foreground="{StaticResource WhiteText}" FontSize="11" VerticalAlignment="Center"/>

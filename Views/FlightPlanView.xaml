                                    </Grid>
                                </Border>
                                <Border Grid.Row="4" Grid.ColumnSpan="2" Style="{StaticResource TelemetryBoxStyle}" Margin="12,4,12,0" Height="32" Padding="8,4">
                                    <Grid Margin="0,-2,0,-2">

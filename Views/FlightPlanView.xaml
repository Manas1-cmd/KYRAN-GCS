                                    </Grid>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource TelemetryBoxStyle}" Margin="12,4,6,4" Height="32" Padding="8,4">
                                    <Grid Margin="0,-2,0,-2">

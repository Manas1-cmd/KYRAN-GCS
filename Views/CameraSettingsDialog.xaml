<Window x:Class="SimpleDroneGCS.Views.CameraSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки камеры"
        Height="300" Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

	<Border Background="#0D1733" BorderBrush="#2A4361" BorderThickness="1" CornerRadius="8">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="50"/>
			</Grid.RowDefinitions>

			<!-- Title Bar -->
			<Border Grid.Row="0" Background="#1A2744" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
				<Grid>
					<TextBlock Text="⚙ Настройки камеры" Foreground="White"
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="SemiBold"/>
					<Button Content="✕" HorizontalAlignment="Right"
                            Width="40" Height="40"
                            Background="Transparent" Foreground="#9CA3AF" BorderThickness="0"
                            Click="CloseButton_Click"/>
				</Grid>
			</Border>

			<!-- Content -->
			<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
				<StackPanel>

					<!-- Gimbal -->
					<TextBlock Text="ПОДВЕС" Foreground="#98F019" FontWeight="Bold" Margin="0,0,0,10"/>

					<Button Content="🎯 Центрировать" Click="GimbalCenter_Click"
                            Background="#1A2744" Foreground="White"
                            BorderBrush="#2A4361" Padding="10,8" Margin="0,0,0,5"/>

					<Button Content="⬇ Смотреть вниз" Click="GimbalLookDown_Click"
                            Background="#1A2744" Foreground="White"
                            BorderBrush="#2A4361" Padding="10,8" Margin="0,0,0,5"/>

					<!-- Video Source -->
					<TextBlock Text="ИСТОЧНИК ВИДЕО" Foreground="#98F019" FontWeight="Bold" Margin="0,15,0,10"/>

					<WrapPanel>
						<Button Content="EO" Click="VideoEO_Click" Width="60"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361" Padding="10,8" Margin="0,0,5,5"/>
						<Button Content="IR" Click="VideoIR_Click" Width="60"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361" Padding="10,8" Margin="0,0,5,5"/>
						<Button Content="PiP" Click="VideoPiP_Click" Width="60"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361" Padding="10,8" Margin="0,0,5,5"/>
					</WrapPanel>

					<!-- IR Thermal -->
					<TextBlock Text="ИК ТЕПЛОВИЗОР" Foreground="#98F019" FontWeight="Bold" Margin="0,15,0,10"/>

					<StackPanel Orientation="Horizontal">
						<Button Content="1x" Tag="1" Click="IrZoom_Click" Width="45"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361" Margin="0,0,5,0"/>
						<Button Content="2x" Tag="2" Click="IrZoom_Click" Width="45"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361" Margin="0,0,5,0"/>
						<Button Content="4x" Tag="4" Click="IrZoom_Click" Width="45"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361" Margin="0,0,5,0"/>
						<Button Content="8x" Tag="8" Click="IrZoom_Click" Width="45"
                                Background="#1A2744" Foreground="White"
                                BorderBrush="#2A4361"/>
					</StackPanel>

				</StackPanel>
			</ScrollViewer>

			<!-- Footer -->
			<Border Grid.Row="2" Background="#1A2744" CornerRadius="0,0,8,8">
				<Button Content="Закрыть" Click="CloseButton_Click"
                        HorizontalAlignment="Right" Margin="0,0,15,0"
                        Background="#2A4361" Foreground="White"
                        BorderThickness="0" Padding="20,8"/>
			</Border>
		</Grid>
	</Border>
</Window>

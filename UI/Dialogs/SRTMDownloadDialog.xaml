<Window x:Class="SimpleDroneGCS.UI.Dialogs.SRTMDownloadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Srtm_Title}"
        Width="420" Height="380"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#0D1733" CornerRadius="12" BorderBrush="#2A4361" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="⛰️" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{DynamicResource Srtm_Header}" 
                           Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Выбор региона -->
            <TextBlock Grid.Row="1" Text="{DynamicResource Region}" Foreground="#8899AA" FontSize="12" Margin="0,0,0,5"/>
            <ComboBox Grid.Row="2" x:Name="RegionComboBox" 
                      Background="#1A2433" Foreground="#1A2433" 
                      FontSize="13" Height="35" Margin="0,0,0,15"
                      SelectionChanged="RegionComboBox_SelectionChanged">
                <ComboBoxItem Content="{DynamicResource Srtm_AllKZ}" Tag="KZ"/>
                <ComboBoxItem Content="{DynamicResource Srtm_Almaty}" Tag="Almaty"/>
                <ComboBoxItem Content="{DynamicResource Srtm_Astana}" Tag="Astana"/>
                <ComboBoxItem Content="{DynamicResource Srtm_Shymkent}" Tag="Shymkent"/>
                <ComboBoxItem Content="{DynamicResource Srtm_CurrentPos}" Tag="Current" IsSelected="True"/>
                <ComboBoxItem Content="{DynamicResource Srtm_Custom}" Tag="Custom"/>
            </ComboBox>

            <!-- Инфо о размере -->
            <Border Grid.Row="3" Background="#1A2433" CornerRadius="6" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="TilesInfoText" Text="{DynamicResource Srtm_Tiles}" Foreground="White" FontSize="12"/>
                    <TextBlock x:Name="SizeInfoText" Text="{DynamicResource Srtm_EstSize}" Foreground="#8899AA" FontSize="11" Margin="0,3,0,0"/>
                    <TextBlock x:Name="CacheInfoText" Text="{DynamicResource Srtm_Cache}" Foreground="#98F019" FontSize="11" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

            <!-- Прогресс -->
            <StackPanel Grid.Row="4" x:Name="ProgressPanel" Visibility="Collapsed">
                <TextBlock x:Name="ProgressText" Text="{DynamicResource Loading}" Foreground="White" FontSize="12" Margin="0,0,0,8"/>
                <ProgressBar x:Name="ProgressBar" Height="8" Minimum="0" Maximum="100" 
                             Background="#1A2433" Foreground="#98F019" BorderThickness="0"/>
                <TextBlock x:Name="ProgressDetailText" Text="" Foreground="#8899AA" FontSize="11" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button x:Name="CancelButton" Content="{DynamicResource Cancel}" Width="100" Height="35"
                        Background="#2A4361" Foreground="White" BorderThickness="0"
                        FontSize="12" Cursor="Hand" Click="CancelButton_Click"/>
                <Button x:Name="DownloadButton" Content="{DynamicResource Download}" Width="120" Height="35"
                        Background="#98F019" Foreground="#0D1733" BorderThickness="0"
                        FontSize="12" FontWeight="Bold" Margin="10,0,0,0" Cursor="Hand" 
                        Click="DownloadButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
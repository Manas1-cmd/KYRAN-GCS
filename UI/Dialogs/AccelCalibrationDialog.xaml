<Window x:Class="SimpleDroneGCS.UI.Dialogs.AccelCalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калибровка акселерометра" 
        Width="480" Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#060B1A"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="#2A4361" BorderThickness="2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="КАЛИБРОВКА АКСЕЛЕРОМЕТРА" 
                       FontSize="15" FontWeight="Bold" FontFamily="Consolas"
                       Foreground="#98F019" HorizontalAlignment="Center"/>
            <TextBlock Text="6-ПОЗИЦИОННАЯ КАЛИБРОВКА" 
                       FontSize="9" FontFamily="Consolas"
                       Foreground="#4498F019" HorizontalAlignment="Center" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Индикаторы шагов -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="Step0" Grid.Column="0" Background="#1A2A4361" CornerRadius="4" Margin="2" Padding="4,6">
                <TextBlock Text="РОВНО" FontSize="8" FontFamily="Consolas" Foreground="#4498F019" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="Step1" Grid.Column="1" Background="#1A2A4361" CornerRadius="4" Margin="2" Padding="4,6">
                <TextBlock Text="ВЛЕВО" FontSize="8" FontFamily="Consolas" Foreground="#4498F019" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="Step2" Grid.Column="2" Background="#1A2A4361" CornerRadius="4" Margin="2" Padding="4,6">
                <TextBlock Text="ВПРАВО" FontSize="8" FontFamily="Consolas" Foreground="#4498F019" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="Step3" Grid.Column="3" Background="#1A2A4361" CornerRadius="4" Margin="2" Padding="4,6">
                <TextBlock Text="НОС↓" FontSize="8" FontFamily="Consolas" Foreground="#4498F019" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="Step4" Grid.Column="4" Background="#1A2A4361" CornerRadius="4" Margin="2" Padding="4,6">
                <TextBlock Text="НОС↑" FontSize="8" FontFamily="Consolas" Foreground="#4498F019" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="Step5" Grid.Column="5" Background="#1A2A4361" CornerRadius="4" Margin="2" Padding="4,6">
                <TextBlock Text="ВЕРХ↓" FontSize="8" FontFamily="Consolas" Foreground="#4498F019" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Центральная визуализация -->
        <Border Grid.Row="2" Background="#0D1733" CornerRadius="8"
                BorderBrush="#1A2A4361" BorderThickness="1" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0" Stretch="Uniform" MaxHeight="160" Margin="0,0,0,10">
                    <Canvas x:Name="DroneIconCanvas" Width="160" Height="120"/>
                </Viewbox>

                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <TextBlock x:Name="PositionTitle" Text="Шаг 1/6: LEVEL"
                               FontSize="16" FontWeight="Bold" FontFamily="Consolas"
                               Foreground="#98F019" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PositionDescription" Text="Поставьте дрон РОВНО на стол"
                               FontSize="12" FontFamily="Segoe UI"
                               Foreground="#CCDDDD" HorizontalAlignment="Center"
                               TextAlignment="Center" Margin="0,6,0,0" TextWrapping="Wrap"/>
                    <TextBlock x:Name="PositionHint" Text="Нажмите ДАЛЕЕ когда дрон установлен"
                               FontSize="10" FontFamily="Consolas"
                               Foreground="#6698F019" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Прогресс -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <ProgressBar x:Name="CalibProgress" Height="8" Minimum="0" Maximum="6" Value="0"
                         Background="#1A2A4361" Foreground="#98F019" BorderThickness="0"/>
        </Grid>

        <!-- Статус -->
        <TextBlock x:Name="StatusText" Grid.Row="4"
                   Text="Нажмите НАЧАТЬ для запуска калибровки"
                   FontSize="10" FontFamily="Consolas"
                   Foreground="#6698F019" HorizontalAlignment="Center"
                   TextAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap"/>

        <!-- Кнопки -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="StartButton" Grid.Column="0" Content="НАЧАТЬ"
                    Height="38" Margin="0,0,4,0"
                    Background="#1A98F019" Foreground="#98F019"
                    BorderBrush="#3398F019" BorderThickness="1"
                    FontFamily="Consolas" FontWeight="Bold" FontSize="12"
                    Click="StartButton_Click" Cursor="Hand"/>

            <Button x:Name="NextButton" Grid.Column="1" Content="ДАЛЕЕ ▶"
                    Height="38" Margin="4,0,4,0"
                    Background="#1A00AAFF" Foreground="#00AAFF"
                    BorderBrush="#3300AAFF" BorderThickness="1"
                    FontFamily="Consolas" FontWeight="Bold" FontSize="12"
                    Click="NextButton_Click" Cursor="Hand"
                    IsEnabled="False" Opacity="0.4"/>

            <Button x:Name="CancelButton" Grid.Column="2" Content="ОТМЕНА"
                    Height="38" Margin="4,0,0,0"
                    Background="#1AFF4444" Foreground="#FF6666"
                    BorderBrush="#33FF4444" BorderThickness="1"
                    FontFamily="Consolas" FontWeight="Bold" FontSize="12"
                    Click="CancelButton_Click" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>

<UserControl x:Class="SimpleDroneGCS.Controls.LanguageToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="40"
             Cursor="Hand"
             MouseLeftButtonDown="Toggle_Click">

    <Grid>
        <!-- Фоновый овал -->
        <Border x:Name="Background"
                Background="#0D1733"
                CornerRadius="20"
                BorderBrush="#2A4361"
                BorderThickness="2"/>

        <!-- Слайдер (активный индикатор) -->
        <Border x:Name="Slider"
                Width="100"
                Height="36"
                Background="#2A4361"
                CornerRadius="18"
                HorizontalAlignment="Left"
                Margin="2,0,0,0">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SliderTransform" X="0"/>
            </Border.RenderTransform>
        </Border>

        <!-- Тексты -->
        <Grid>
            <TextBlock x:Name="RussianText"
                      Text="Русский"
                      Foreground="White"
                      FontSize="14"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="30,0,0,0"/>

            <TextBlock x:Name="KazakhText"
                      Text="Қазақша"
                      Foreground="#98F019"
                      FontSize="14"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="0,0,25,0"/>
        </Grid>
    </Grid>
</UserControl>